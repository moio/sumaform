provider "libvirt" {
  uri = "qemu:///system"
}

module "base" {
  source = "./modules/libvirt/base"

  cc_username = "UC7"
  cc_password = ...

  // optional parameters with defaults below
  // pool = "default"
  // network_name = "default" // change to "" if you change bridge below
  // bridge = ""
  // name_prefix = ""
}

module "suma3pg" {
  source = "./modules/libvirt/suse_manager"
  base_configuration = "${module.base.configuration}"

  name = "suma3pg"
  version = "3-nightly"
  // see modules/libvirt/suse_manager/variables.tf for possible values
}

module "clisles11sp3" {
  source = "./modules/libvirt/client"
  base_configuration = "${module.base.configuration}"

  name = "clisles11sp3"
  image = "sles11sp3"
  server_configuration = "${module.suma3pg.configuration}"
  count = 1
  // see modules/libvirt/client/variables.tf for possible values
}

module "minsles12sp1" {
  source = "./modules/libvirt/minion"
  base_configuration = "${module.base.configuration}"

  name = "minsles12sp1"
  image = "sles12sp1"
  server_configuration = "${module.suma3pg.configuration}"
  count = 1
  // see modules/libvirt/minion/variables.tf for possible values
}

# testing env. QA-auto. Control-node where cucumber test run
module "control-node" {
  source = "./libvirt_host"
  name = "control-node"
  image = "${module.images.sles12sp1}"
  role = "control-node"
}
