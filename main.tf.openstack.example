// Inter-Server Sync (ISS)

module "suma21pgmaster" {
  source = "./modules/openstack/host"
  name = "suma21pgmaster"
  image = "sumaform-sles11sp3"
  version = "2.1-stable"
  database = "postgres"
  role = "suse_manager_server"
  cc_username = "${var.cc_username}"
  cc_password = "${var.cc_password}"
  iss_slave = "suma21pgslave.tf.local"
}

module "suma21pgslave" {
  source = "./modules/openstack/host"
  name = "suma21pgslave"
  image = "sumaform-sles11sp3"
  version = "2.1-stable"
  database = "postgres"
  role = "suse_manager_server"
  cc_username = "${var.cc_username}"
  cc_password = "${var.cc_password}"
  iss_master = "${module.suma21pgmaster.configuration["hostname"]}"
}
