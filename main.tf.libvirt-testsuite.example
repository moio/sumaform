provider "libvirt" {
  uri = "qemu:///system"
}

module "base" {
  source = "./modules/libvirt/base"
  cc_username = "UC7"
  cc_password = ...
  // optional parameters with defaults below
  // pool = "default"
  // network_name = "default" // change to "" if you change bridge below
  // bridge = ""
  // name_prefix = ""
  // you need always sles12sp1 because controller is based on that.
  images = ["centos7", "sles12sp1", "sles12sp2"]
}

module "sumaheadpg" {
  source = "./modules/libvirt/suse_manager"
  base_configuration = "${module.base.configuration}"
  name = "sumaheadpg"
  image = "sles12sp2"
  version = "head"
  for_development_only = false
  for_testsuite_only = true
}

module "clisles12sp2" {
  source = "./modules/libvirt/client"
  base_configuration = "${module.base.configuration}"
  name = "clisles12sp2"
  image = "sles12sp2"
  server_configuration =  { hostname = "sumaheadpg.tf.local" }
  for_development_only = false
  for_testsuite_only = true
}

module "minsles12sp2" {
  source = "./modules/libvirt/minion"
  base_configuration = "${module.base.configuration}"
  version = "head"
  name = "minsles12sp2"
  image = "sles12sp2"
  server_configuration =  { hostname = "sumaheadpg.tf.local" }
  for_development_only = false
  for_testsuite_only = true
}

module "minsles12sp1ssh" {
  source = "./modules/libvirt/minion"
  base_configuration = "${module.base.configuration}"
  version = "head"
  name = "minsles12sp1ssh"
  image = "sles12sp1"
  server_configuration =  { hostname = "sumaheadpg.tf.local" }
  for_development_only = false
  for_testsuite_only = true
}

module "mincentos7" {
  source = "./modules/libvirt/minion"
  base_configuration = "${module.base.configuration}"
  version = "head"
  name = "mincentos7"
  image = "centos7"
  server_configuration =  { hostname = "sumaheadpg.tf.local" }
  for_development_only = false
  for_testsuite_only = true
}

module "controller" {
  source = "./modules/libvirt/controller"
  base_configuration = "${module.base.configuration}"
  name = "controller"
  server_configuration = "${module.sumaheadpg.configuration}"
  client_configuration = "${module.clisles12sp2.configuration}"
  minion_configuration = "${module.minsles12sp2.configuration}"
  centos_configuration = "${module.mincentos7.configuration}"
  minionssh_configuration = "${module.minsles12sp1ssh.configuration}"
  # branch = "master" # See modules/libvirt/controller/variables.tf for possible values
}
